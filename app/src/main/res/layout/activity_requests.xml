<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.RequestsActivity">

    <include
        layout="@layout/actionbar"
        android:id="@+id/activity_requests_actionbar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_requests_recycler_view_requests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_requests_actionbar"/>

    <ProgressBar
        android:id="@+id/activity_requests_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>