<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <include
        layout="@layout/actionbar"
        android:id="@+id/activity_book_details_actionbar" />

    <!-- TableLayout Başlangıcı -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1,2">

        <!-- İçerik Satırı 1, Hücre 1-1 ve Hücre 1-2'yi Birleştir -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_span="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book_name"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/activity_book_details_tv_bookname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                app:cardCornerRadius="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/author"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/activity_book_details_tv_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />


            </androidx.cardview.widget.CardView>
        </TableRow>

        <!-- İçerik Satırı 2 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="5dp"
                android:layout_margin="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tür"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/activity_book_details_tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="5dp"
                android:layout_margin="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sayfa Sayısı"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/activity_book_details_tv_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="5dp"
                android:layout_margin="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dolap No."
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/activity_book_details_tv_cabinet_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>

        </TableRow>

        <!-- İçerik Satırı 3 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                app:cardCornerRadius="5dp"
                android:layout_margin="2dp"
                android:layout_span="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yayımlahma Tarihi"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/activity_book_details_tv_publication_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/activity_book_details_card_other_information"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="5dp"
                android:layout_margin="2dp"
                app:cardBackgroundColor="#282828">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diğer Bilgler"
                    android:layout_gravity="center" />

            </androidx.cardview.widget.CardView>

        </TableRow>

        <!-- İçerik Satırı 4 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_span="3"
                android:padding="2dp" >

                <Button
                    android:id="@+id/activity_book_details_btn_reserve"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/button_bg"
                    android:text="Rezerve Et"
                    android:textSize="20sp"/>

                <ProgressBar
                    android:id="@+id/activity_book_details_progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />


            </RelativeLayout>

        </TableRow>

    </TableLayout>
    <!-- TableLayout Sonu -->

</LinearLayout>